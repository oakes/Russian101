<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
    <color name="listitem">#2489CE</color>
    <color name="backdrop">#005b98</color>
    <color name="backdrop_transparent">#55005b98</color>
    <color name="maintext">#FFFFFF</color>
    <color name="unlocker">#FFD700</color>
    
    <style name="oakleaf" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:textColor">@color/maintext</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@color/backdrop</item>
    </style>
    
    <style name="oakleaf_transparent" parent="oakleaf">
        <item name="android:background">@color/backdrop_transparent</item>
    </style>
    
</resources>